{
  "dashboard": {
    "title": "Ligue Payments - Overview",
    "uid": "ligue-payments-main",
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "title": "Requests/s",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(http_requests_total[1m])",
            "legendFormat": "{{method}} {{path}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Latência P95",
        "type": "gauge",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "thresholds": [
            {"value": 0, "color": "green"},
            {"value": 1, "color": "yellow"},
            {"value": 2, "color": "red"}
          ]
        }
      },
      {
        "id": 3,
        "title": "Taxa de Erro (%)",
        "type": "gauge",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "100 * (sum(rate(http_requests_total{status=~\"4..|5..\"}[5m])) / sum(rate(http_requests_total[5m])))",
            "refId": "A"
          }
        ],
        "options": {
          "thresholds": [
            {"value": 0, "color": "green"},
            {"value": 5, "color": "yellow"},
            {"value": 10, "color": "red"}
          ]
        }
      },
      {
        "id": 4,
        "title": "Pagamentos Recebidos",
        "type": "stat",
        "gridPos": {"x": 0, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "payments_received_total",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Assinaturas Ativadas",
        "type": "stat",
        "gridPos": {"x": 6, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "subscriptions_activated_total",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "title": "Conexões Ativas",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "http_active_connections",
            "legendFormat": "Conexões ativas",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "title": "Top 10 Endpoints Mais Acessados",
        "type": "table",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "topk(10, sum by (path) (rate(http_requests_total[5m])))",
            "refId": "A",
            "format": "table"
          }
        ]
      },
      {
        "id": 8,
        "title": "Pagamentos por Método",
        "type": "piechart",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum by (method) (payments_received_total)",
            "refId": "A"
          }
        ]
      },
      {
        "id": 9,
        "title": "Erros de Integração",
        "type": "graph",
        "gridPos": {"x": 0, "y": 24, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "rate(integration_errors_total[5m])",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ]
      }
    ]
  }
}
